---
import BaseLayout from "../layouts/BaseLayout.astro";
import kostaHistory from "../data/kosta-history.json";
---

<BaseLayout title="Home">
	<div class="relative h-[25vh] sm:h-[35vh] md:h-[40vh] lg:h-[44vh] xl:h-[48vh] 2xl:h-[54vh] sm:bg-position-[center_bottom_20rem] md:bg-position-[center_bottom_18rem] lg:bg-position-[center_bottom_16rem] xl:bg-position-[center_bottom_14rem] 2xl:bg-position-[center_bottom_10rem] bg-cover bg-center grayscale sm:bg-fixed bg-[url(/kosta/hero.jpg)]">
		<div class="absolute inset-0 pointer-events-none" 
		style="background: radial-gradient(circle, rgba(255, 255, 255, 0) 40%, rgba(0 0 0 / 0.7) 100%);">
		</div>
	</div>
	<div class="px-6 pb-12 my-4 sm:px-12 lg:px-16 xl:px-24 max-w-screen-lg mx-auto">
		{
			kostaHistory.map((item) => (
				<div class="py-6 border-b border-gray-300">
					<h2 class="text-2xl font-bold text-gray-800 mb-2">{item.title}</h2>
					<p class="text-md text-gray-600 leading-relaxed">{item.description}</p>
				</div>
			))
		}
	</div>
	
</BaseLayout>
