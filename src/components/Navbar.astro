---
const currentPath = Astro.url.pathname;
import SocialLinks from './SocialLinks.astro';
---

<div class="flex justify-between items-center bg-white shadow-sm">
    <h2 class="pl-8 font-bold text-lg">Kosta</h2>
    <div class="flex text-lg">
        <a href="/" class={`p-4 ${currentPath === '/' ? 'border-b-4 border-sky-500 font-bold transition-colors duration-300 ease-in-out' : ''}`}>Home</a>
        <a href="/about" class={`p-4 ${currentPath === '/about' ? 'border-b-4 border-sky-500 font-bold transition-colors duration-300 ease-in-out' : ''}`}>About</a>
    </div>
    
    <div class="text-black text-xs pr-8">
        <SocialLinks />
    </div>
</div>
